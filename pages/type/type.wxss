/* pages/type/type.wxss */

page {
  background: #fff;
}

.select_box {
  border-radius: 14rpx;
  position: relative;
}

.select {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.select_box .select .select_text {
  font-size: 26rpx;
  color: #000;
  line-height: 28rpx;
  flex: 1;
}

.select .select_img {
  margin-left: 6rpx;
  width: 16rpx;
  height: 16rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.sortingIntf {
  display: flex;
  justify-content: space-between;
  padding-bottom: 24rpx;
}

.sortingIntf_li {
  font-size: 30rpx;
  flex: 2;
  text-align: center;
}

.sortingIntf_text {
  margin-right: 10rpx;
  font-size: 30rpx;
}
.sreenActive{
  border: 2rpx solid #FE785D !important;
  color: #FE785D;
}
.screening {
  display: flex;
  justify-content: space-between;
  border-top: 2rpx solid #f0f0f0;
  border-bottom: 2rpx solid #f0f0f0;
}

.screening_left {
  width: 210rpx;
  box-sizing: border-box;
  border-right: 2rpx solid #f3f3f5;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 22rpx;
}
.screening_left text{
  display: inline-block;
  width: 112rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
}

.screening_right {
  width: 70%;
  white-space: nowrap;
  overflow: hidden;
  font-size: 28rpx;
  padding: 24rpx 0;
}

.screening_right view {
  display: inline-block;
  margin-right: 14rpx;
  width: 190rpx;
  height: 56rpx;
  line-height: 28rpx;
  box-sizing: border-box;
  padding: 14rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 28rpx;
  text-align: center;
}
.positionleft {
  position: fixed;
  left: 0;
  top: 180rpx;
  bottom: 0;
  box-sizing: border-box;
  padding: 10rpx 0 10rpx 30rpx;
  width: 210rpx;
  background: #f3f3f5;
  font-size: 28rpx;
}

.positionleft_li {
  padding: 24rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.positionleft_li_text {
  width: 112rpx;
  font-size: 28rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.positionleft_li image {
  margin-right: 22rpx;
  width: 30rpx;
  height: 30rpx;
}
.content {
  padding: 30rpx;
}

.content_prompt {
  width: 100%;
  height: 66rpx;
  line-height: 66rpx;
  background: rgba(255, 246, 235, 1);
  border-radius: 4rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
  font-weight: bold;
}

.content_li {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f3f5;
}

.content_img {
  margin-right: 20rpx;
  box-sizing: border-box;
  width: 200rpx;
  height: 280rpx;
  border: 2rpx solid rgba(240, 240, 240, 1);
  border-radius: 4rpx;
}

.content_img image {
  max-width:100%;
  max-height:100%;
}

.content_con {
  width: 500rpx;
}

.content_text {
  display: block;
}

.content_btn {
  display: flex;
  justify-content: space-between;
}

.content_btn image {
  width: 40rpx;
  height: 40rpx;
}

.brand_li {
  border-bottom: 2rpx solid #f3f3f5;
}

.sort_li {
  display: block;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f3f3f5;
  line-height: 110rpx;
  /* text-align: right; */
  font-size: 30rpx;
  color: #999;
}

.brand_li image {
  width: 138rpx;
  height: 54rpx;
  vertical-align: middle;
  margin-left: 30rpx;
  margin-right: 20rpx;
}

.brand_li text {
  font-size: 30rpx;
  color: #999;
  line-height: 110rpx;
}

.brand_titbox {
  padding: 24rpx 30rpx;
  border-bottom: 2rpx solid #f3f3f5;
}

.brand_tit {
  display: block;
  width: 110rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 28rpx;
  border: 2rpx solid rgba(224, 224, 224, 1);
  border-radius: 28rpx;
  text-align: center;
}

.type_modal {
  position: fixed;
  top: 188rpx;
  z-index: 100;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.8);
}

.brand_con {
  height: 888rpx;
  background: #fff;
  overflow: scroll;
}

.sort_con {
  height: 666rpx;
  background: #fff;
  overflow: scroll;
}

.active {
  color: #fe785d;
}


