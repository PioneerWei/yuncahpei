/* pages/orderdetails/orderdetails.wxss */

.details_statue {
  padding: 20rpx 0 84rpx;
  width: 100%;
  background: #f36c52;
  color: #fff;
  text-align: center;
}

.status_status {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 38rpx;
  font-weight: bold;
}

.status_status image {
  margin-right: 16rpx;
  width: 38rpx;
  height: 38rpx;
}

.status_price {
  margin: 26rpx 0 46rpx;
  font-size: 26rpx;
}

.status_btn {
  margin: 0 auto;
  width: 240rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 35rpx;
  color: #f6604f;
  font-size: 32rpx;
}

.address {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin: -40rpx auto 0;
  width: 710rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
}

.address_con {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
}

.address_con_name {
  display: flex;
  align-items: center;
}

.address_con_name text {
  margin-left: 15rpx;
  font-size: 28rpx;
  color: #666;
}

.address_con_addre {
  margin-left: 45rpx;
  font-size: 28rpx;
  color: #999;
}

.logistics {
  background: #fff;
  margin: 20rpx 0 0;
}

.logistics_li {
  display: flex;
  justify-content: space-between;
  padding: 36rpx 30rpx;
  border-bottom: 2rpx solid #f3f3f5;
}

.content {
  margin-top: 20rpx;
  padding: 0 30rpx;
  background: #fff;
}

.content_li_tit {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  background: rgba(250, 250, 250, 1);
  border-radius: 10rpx;
}

.content_li_tit {
  font-size: 26rpx;
  color: #333;
}

.checkbox {
  display: flex;
  align-items: center;
}

.content_li_tit checkbox-group {
  flex: 2;
}

.content_li_con {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #f3f3f5;
}

.li_con_img {
  width: 170rpx;
  height: 210rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(240, 240, 240, 1);
  border-radius: 4rpx;
}

.li_con_img image {
  width: 100%;
  height: 100%;
}

.li_con_con {
  margin-left: 10rpx;
}

.con_con_tit {
  font-size: 28rpx;
  color: #333;
}

.con_con_rich {
  font-size: 24rpx;
  color: #999;
}

.con_con_price {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con_con_btn {
  width: 156rpx;
  height: 52rpx;
  line-height: 50rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(224, 224, 224, 1);
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con_con_btn text:first-child {
  width: 44rpx;
  height: 100%;
  display: inline-block;
  background: #fafafa;
  border-radius: 26rpx 0 0 26rpx;
}

.con_con_btn text:last-child {
  width: 44rpx;
  height: 100%;
  display: inline-block;
  background: #fafafa;
  border-radius: 0 26rpx 26rpx 0;
}

.con_con_btn text:nth-child(2) {
  color: #333;
}

.textarea {
  box-sizing: border-box;
  padding: 20rpx;
  width: 100%;
  height: 120rpx;
  background: rgba(243, 243, 245, 1);
  border-radius: 10rpx;
}

.con_price {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: #999;
  line-height: 52rpx;
  font-weight: bold;
}

.con_price:last-child {
  color: #333;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f3f3f5;
}

.price_shif {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.yellow {
  padding: 24rpx 30rpx;
  background: #fdfcef;
}

.yellow_li {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #d98675;
}

.orderinform {
  margin: 20rpx 0;
  padding: 30rpx;
  background: #fff;
}

.orderinform view {
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.orderinform text {
  display: block;
  color: #999;
  font-size: 26rpx;
  line-height: 40rpx;
}

.tuihuo_btn {
  width: 118rpx;
  height: 60rpx;
  line-height: 58rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(224, 224, 224, 1);
  border-radius: 30rpx;
}

.footer1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 40rpx;
  background: #fff;
}

.allbtn {
  padding: 10rpx 26rpx;
  background: rgba(254, 120, 93, 1);
  border-radius: 34rpx;
  font-size: 30rpx;
  color: #fff;
}

.footer2 {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 16rpx 40rpx;
  background: #fff;
}


