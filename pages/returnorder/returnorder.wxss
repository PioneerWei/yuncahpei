/* pages/returnorder/returnorder.wxss */

.header {
  background: #fff;
  padding-bottom: 14rpx;
}

.header scroll-view {
  box-sizing: border-box;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
}

scroll-view view:first-child {
  margin-right: 20rpx;
  margin-left: 10rpx;
}

.header_nav {
  display: inline-block;
  padding: 30rpx 26rpx 0;
  font-size: 28rpx;
  color: #666;
}

.nav_i {
  margin: 20rpx auto 0;
  width: 52rpx;
  height: 4rpx;
  background: #fe785d;
}

.active {
  color: #fe785d;
}

.search {
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 28rpx;
  margin: 14rpx 30rpx 0;
  width: 690rpx;
  height: 64rpx;
  background: rgba(243, 243, 245, 1);
  border-radius: 32rpx;
}

.screening_inp {
  width: 80%;
}

.place_text {
  font-size: 26rpx;
  color: #c7c9d7;
}

.content_li {
  margin-top: 10rpx;
  padding: 0 30rpx;
  background: #fff;
}

.content_tit {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  font-size: 26rpx;
}

.content_tit text:first-child {
  color: #999;
}

.content_tit text:last-child {
  color: #fe785d;
}

.content_price {
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  text-align: right;
  font-weight: bold;
}
.content_con{
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.content_img {
  width: 138rpx;
  height: 180rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(240, 240, 240, 1);
  border-radius: 4rpx;
}
.content_img image{
  width: 100%;
  height: 100%;
}
.content_right{
  width: 530rpx;
}
.content_con_tit{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #333;
}
.content_con_tit view text{
  display: block;
  text-align: right;
}
.content_rich{
  font-size: 24rpx;
  color: #999;
}