/* pages/bind/bind.wxss */

page {
  background: #fff;
}

.logo {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  width: 100%;
  font-size: 26rpx;
  color: #fff;
  font-weight: bold;
  background: #f36c52;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
}

.banner {
  width: 100%;
  height: 320rpx;
  background: #f36c52;
}

.banner image {
  width: 100%;
  height: 100%;
}

.place {
  font-size: 30rpx;
  color: #ccc;
}

.form {
  margin-top: -180rpx;
  padding: 0 60rpx;
  background: #fff;
}

.form_tit {
  margin-bottom: 40rpx;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
}

.form_li {
  display: flex;
  margin-top: 20rpx;
  padding: 24rpx 0;
  border-bottom: 2rpx solid #f3f3f5;
}

.form_li image {
  width: 44rpx;
  height: 44rpx;
}

.form_li input {
  margin-left: 20rpx;
  width: 450rpx;
}

.bindbtn {
  margin: 60rpx auto 0;
  width: 452rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: rgba(254, 120, 93, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
}
