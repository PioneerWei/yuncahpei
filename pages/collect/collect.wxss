/* pages/collect/collect.wxss */
page{
  background: #fff;
  position: fixed;
}
.collect{
  height: 100%;
}
.collect_li {
  position: relative;
  width: 100%;
}

.li_con {
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  width: 100%;
  background: #fff;
}

.li_con_left {
  width: 170rpx;
  height: 220rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(240, 240, 240, 1);
  border-radius: 4rpx;
}

.li_con_right {
  width: 500rpx;
}

.right_tit {
  font-size: 28rpx;
  color: #333;
}

.right_rich {
  font-size: 24rpx;
  color: #999;
}

.right_size {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.size_size view {
  font-size: 24rpx;
  color: #999;
}

.li_con_left image {
  width: 100%;
  height: 100%;
}

.size_btn {
  display: block;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  background: #FE785D;
  border-radius: 20rpx;
  color: #fff;
  text-align: center;
  font-weight: bold;
}

.li_remove {
  position: absolute;
  right: -150rpx;
  top: 0;
  width: 150rpx;
  height: 100%;
  background: #fe5d5d;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.left{
  transform: translate(-150rpx,0);
  transition: 0.5s;
}