/* pages/personal/personal.wxss */

.personal_li {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  font-size: 30rpx;
  background: #fff;
  border-bottom: 2rpx solid #f3f3f5;
}

.personal_li_left {
  color: #666;
}

.personal_li_right {
  display: flex;
  align-items: center;
  color: #333;
}

.personal_li_right image {
  width: 14rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.wxbind {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  margin-top: 20rpx;
  background: #fff;
}

.wxbind_text1 {
  font-size: 30rpx;
  color: #333;
}

.wxbind_text2 {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #ccc;
}

.showmodal {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
}

.modal {
  padding-top: 60rpx;
  margin: 450rpx auto 0;
  width: 580rpx;
  box-shadow: 0rpx 8rpx 10rpx 0rpx rgba(148, 148, 175, 0.1);
  border-radius: 20rpx;
  background: #fff;
}
.modal_tit{
  text-align: center;
  font-size: 32rpx;
  color: #2C2C30;
  font-weight: bold;
}
.modal_inp{
  margin: 50rpx auto;
  width: 458rpx;
  height: 80rpx;
  border-radius:10rpx;
  background: #FAFAFA;
}
.modal_btn{
  display: flex;
  border-top: 2rpx solid #E0E0E0;
}
.modal_btn view{
  flex: 2;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}
.modal_btn1{
  border-right: 2rpx solid #E0E0E0;
  color: #999;
}
.modal_btn2{
  color: #fff;
  background: #FE785D;
  border-radius: 0 0 20rpx 0;
}
