/* pages/car/car.wxss */

page {
  background: #fff;
  position: fixed;
}
.car{
  height: 100%;
}
.collect_li {
  position: relative;
  width: 100%;
}
.collect_li:last-child{
  margin-bottom: 100rpx;
}
.lin_box {
  box-sizing: border-box;
  padding: 0 30rpx;
  width: 100%;
  
}

.li_con {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  background: #fff;
  border-bottom: 2rpx solid #F3F3F5;
}
.li_con_con{
  display: flex;
}
.li_con_left {
  width: 170rpx;
  height: 170rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(240, 240, 240, 1);
  border-radius: 4rpx;
}

.li_con_right {
  margin-left: 10rpx;
  width: 440rpx;
}

.right_tit {
  font-size: 28rpx;
  color: #333;
}

.right_rich {
  font-size: 24rpx;
  color: #999;
}

.right_size {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.size_size view {
  font-size: 24rpx;
  color: #999;
}

.li_con_left image {
  width: 100%;
  height: 100%;
}

.con_con_btn {
  width: 156rpx;
  height: 52rpx;
  line-height: 50rpx;
  text-align: center;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(224, 224, 224, 1);
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.con_con_btn text:first-child {
  width: 44rpx;
  height: 100%;
  display: inline-block;
  background: #fafafa;
  border-radius: 26rpx 0 0 26rpx;
}

.con_con_btn text:last-child {
  width: 44rpx;
  height: 100%;
  display: inline-block;
  background: #fafafa;
  border-radius: 0 26rpx 26rpx 0;
}

.con_con_btn text:nth-child(2) {
  color: #333;
}

.li_remove {
  position: absolute;
  right: -150rpx;
  top: 0;
  width: 150rpx;
  height: 100%;
  background: #fe5d5d;
  font-size: 30rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left {
  transform: translate(-150rpx, 0);
  transition: 0.5s;
}

.settlement {
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  align-items: center;
  padding: 16rpx 30rpx;
  font-size: 24rpx;
  color: #999;
}

.settlement_btn view {
  display: inline-block;
}

.settlement_btn view:first-child {
  font-size: 24rpx;
  color: #999;
}

.settlement_btn view:last-child {
  margin-left: 36rpx;
  width: 168rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background: rgba(254, 120, 93, 1);
  border-radius: 34rpx;
  font-size: 30rpx;
  color: #fff;
}
